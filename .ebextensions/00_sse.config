files:
  "/etc/nginx/conf.d/sse.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # --- Enable Server-Sent Events (SSE) for Chatbot ---
      proxy_buffering off;
      proxy_cache off;
      gzip off;
      chunked_transfer_encoding on;
      tcp_nodelay on;

      # Prevent timeouts during long-running streams
      proxy_read_timeout 3600s;
      proxy_send_timeout 3600s;

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
